# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/stratify_db

# JWT Secret (Generate a secure random string)
SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# API Keys
# CoinGecko API (Free tier doesn't require key)
COINGECKO_API_KEY=

# FRED API - Get from https://fred.stlouisfed.org/
FRED_API_KEY=your-fred-api-key-here

# NewsAPI - Get from https://newsapi.org/
NEWS_API_KEY=your-newsapi-key-here

# Ollama Settings (free, local open-source LLM)
# Install: https://ollama.com  |  Pull model: ollama pull llama3.1:8b
OLLAMA_BASE_URL=http://localhost:11434/v1
OLLAMA_MODEL=llama3.1:8b

# Application Settings
APP_NAME=Stratify AI
DEBUG=False

# CORS Settings (comma-separated for production)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
